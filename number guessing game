secret_number = 7
guess = 0
attempts = 0

while guess != secret_number:
    guess = int(input("Guess the number: "))
    attempts += 1

    if guess < secret_number:
        print("Too low")
    elif guess > secret_number:
        print("Too high")
    else:
        print("Correct! You guessed the number in", attempts, "attempts.")
